{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}

<div class="example-wrapper">
            <p><a href="{{ path ('new_category')}}" class="btn add">Ajouter une catégorie</a></p>

{% for category in categories %}

<a href="{{ path('show_category', {'id': category.id}) }}">
{{category}}
</a>
    


            <p><a href="{{ path ('edit_category', {'id': category.id}) }}" class="btn edit">Modifier une catégorie</a></p>
            <p><a href="{{ path ('delete_category', {'id': category.id}) }}" class="btn delete">Supprimer une catégorie</a></p>

{% endfor %}
</div>
{% endblock %}
