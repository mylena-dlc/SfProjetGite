
{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}


    <button class="btn add"><a href="{{ path ('new_gite')}}" class="link-add">Ajouter un gite</a></button>

<h1>Listes des gîtes</h1>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Capacité</th>
                <th>Description</th>
                <th>Prix de la nuitée</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for gite in gites %}
            <tr>
                <td>{{ gite.name }}</td>
                <td>{{ gite.address }}</td>
                <td>{{ gite.cp}}</td>
                <td>{{ gite.city}}</td>
                <td>{{ gite.capacity }}</td>
                <td>{{ gite.description }}</td>
                <td>{{ gite.price }}</td>
                <td>      
                    <a href="{{ path ('edit_gite', {'id': gite.id}) }}" class="btn edit">Modifier un gite</a>
                    <a href="{{ path ('delete_gite', {'id': gite.id}) }}" class="btn delete">Supprimer un gite</a>
                </td>
            </tr>
               {% endfor %}
        </tbody>
    </table>

    



 


  



{% endblock %}
